extends ../../layout/default.pug
include ../../mixins/submit-button.pug
block main  

    .login-wrapper
        .login-container 
            .login-heading 
                h1 Thay Đổi Mật Khẩu

            p.err-message #{error}
            form(class="form-change" id="form-change" method="POST" action=`/auth/change-password/${email}`)
                .login-input 
                    input(type="password" placeholder="Vui lòng nhập mật khẩu" name="password" required)
                .login-input
                    input(type="password" placeholder="Nhập lại mật khẩu" name="repeat" required)


                .login-submit
                    +submit-button("Xác nhận","form-change")

