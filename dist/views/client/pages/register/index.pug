extends ../../layout/default.pug
include ../../mixins/submit-button.pug
block main  
    .login-wrapper 
        .login-container 
            .login-heading 
                h4(class="login-title")
                    a(href="/login") Đăng nhập   
                h4.active 
                    a(href="/register") Đăng Ký
            .login-content
                p.err-message #{error}
                form(class="form-register" id="form-register" method="POST" action="/auth/register")
                    .login-input 
                        input(type="text" placeholder="Họ" name="first_name" required)
                    .login-input 
                        input(type="text" placeholder="Tên" name="last_name" required)
                    .login-input 
                        input(type="email" placeholder="Vui lòng nhập email của bạn" name="email" required)
                    .login-input 
                        input(type="password" placeholder="Vui lòng nhập mật khẩu" name="password" required)
                    p.re-captcha This site is protected by reCAPTCHA and the Google Privacy Policy and Terms of Service apply.

                    .login-submit
                        +submit-button("Đăng Ký","form-register")
                        p Bạn đã có tài khoản? 
                            a(class="form-navigate" href="/login")  Đăng nhập ngay

