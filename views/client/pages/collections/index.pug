extends ../../layout/default.pug 
include ../../mixins/product-heading.pug
include ../../mixins/card.pug
include ../../mixins/submit-button.pug
include ../../mixins/alertCart.pug
block main

    if messages.addSuccess
        +alertCart(cartData)

    .collection-wrapper 
        .collection-container 
            +product-heading(title)
            .collection-content 
                .collection-left 
                    .collection-heading 
                        span Danh mục sản phẩm
                    .collection-inner 
                        ul
                            a(href="/collections/pc")  PC - Máy tính để bàn 
                            a(href="/collections/man-hinh-may-tinh")  Màn hình máy tính
                            a(href="/collections/vga")  VGA - Card đồ họa
                            a(href="/collections/cpu")  CPU
                            a(href="/collections/balo-tui")  Balo - túi sách
                .collection-right 
                    .collection-thumb
                        a(href="/collections/all")  
                            img(src="/image/product_banner.webp" alt="" srcset="")

                    .collection-product 
                        .collectionProduct-heading
                            .collectionBox-left 
                                h1 #{title}
                                p(class="quantity-product" data-qty=quantity) #{quantity}
                                    span sản phẩm
                        .collectionProduct-content 
                            .collectionProduct-row 
                                each item of product

                                    +card(item)
                            form(action="" method="get" class="loadmore-btn")
                                button(type="submit" class="more-product") Xem thêm sản phẩm
    script.
        let skip = 10; // skip 10 products initially
        const url = window.location.href;
        const parts = url.split("/");
        const brand = parts[parts.length-1];
        const collectionRow = document.querySelector(".collectionProduct-row");
        const loadMore = document.querySelector(".more-product");

        document.querySelector('.loadmore-btn').addEventListener('click', (e) => {
            e.preventDefault();
            loadMore.classList.add("show");

            fetch(`/api/products?skip=${skip}&brand=${brand}`)
                .then(response => response.json())
                    .then(data => {
                    data.forEach(product => {
                        const productElement = `
